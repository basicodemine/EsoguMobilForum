<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="13.5"
    android:background="@drawable/bg"
    android:id="@+id/asdlolxD"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="twitter.ogu.com.esogumobilforum.ForumInsert">
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/secilenresim"
        android:layout_gravity="center"
        android:layout_width="100dp"
        android:layout_weight="3.5"
        android:layout_height="1dp"
        android:src="@drawable/picturebox"
        app:civ_border_width="1dp"
        app:civ_border_color="#aa000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:textColor="#2269d4"
        android:layout_height="1dp"
        android:layout_marginBottom="30dp"
        android:textAllCaps="false"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="60dp"
        android:padding="10dp"
        android:layout_marginRight="60dp"
        android:layout_weight="1"
        android:text="          Resim Seç"
        android:layout_gravity="center"
        android:drawableRight="@drawable/bluetick"
        android:background="@drawable/buttonxml"
        android:id="@+id/resimyukle1"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="match_parent"
        android:hint="başlık"
        android:layout_weight="2"
        android:layout_gravity="center"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/baslik"
        android:id="@+id/baslikana"
        android:padding="10dp"
        android:layout_below="@+id/secilenresim"
        android:layout_centerHorizontal="true" />
    <EditText
        android:layout_width="match_parent"
        android:hint="içerik"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:gravity="top|left"
        android:layout_marginBottom="10dp"
        android:background="@drawable/icerik"
        android:layout_weight="6"
        android:layout_height="1dp"
        android:inputType="textMultiLine"
        android:id="@+id/icerikana"
        android:layout_gravity="center"
        android:layout_below="@+id/baslikana"
        android:layout_centerHorizontal="true" />
    <ProgressBar
        style="@style/Base.Widget.AppCompat.ProgressBar"
        android:id="@+id/progress"
        android:layout_gravity="center"
        android:visibility="invisible"
        android:layout_below="@+id/icerikana"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:indeterminate="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:text="Başlık Aç"
        android:textColor="#2269d4"
        android:layout_gravity="center"
        android:id="@+id/yolla"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:textAllCaps="false"
        android:layout_marginBottom="10dp"
        android:background="@drawable/buttonxml"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</LinearLayout>
